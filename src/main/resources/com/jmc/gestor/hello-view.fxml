<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jmc.gestor.HelloController">
    <center>
        <TableView fx:id="tablaTareas">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colTitulo" text="Título" prefWidth="150"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="200"/>
                <TableColumn fx:id="colPrioridad" text="Prioridad" prefWidth="100"/>
                <TableColumn fx:id="colFechaLimite" text="Fecha Límite" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Título:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTitulo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Descripción:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="txtDescripcion" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Prioridad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbPrioridad" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Fecha Límite:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateFechaLimite" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Agregar"  styleClass="button-agregar"/>
                <Button text="Editar"  styleClass="button-editar"/>
                <Button text="Eliminar"  styleClass="button-eliminar"/>
                <Button text="Limpiar"  styleClass="button-limpiar"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
